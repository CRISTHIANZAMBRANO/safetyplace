            <td align="center"><%= h[i].vez_usada %></td>
            <td align="justify"><%= h[i].vulnerabilidad %></td>
            <td align="justify"><%= h[i].tipo_vulnerabilidad %></td>
            <td align="justify"><%= h[i].tecnología %></td>
            <td align="justify"><%= h[i].impacto %></td>
            <td align="center"><%= h[i].impacto_medido %></td>
            <td align="justify"><%= h[i].usuariosafectados %></td>
