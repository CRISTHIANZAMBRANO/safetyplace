            <td align="center"><a href="https://app.powerbi.com/view?r=eyJrIjoiN2ZiMzIxZjUtZGZjYi00MDJhLThmZTktODE2NDc4YTI3YjZhIiwidCI6Ijc5ODcxZWIxLTYwOTYtNDJiZi05OGVmLWI0ZjNlNGVmODMxOCIsImMiOjR9&pageName=ReportSection"><button class='btn btn-info'>Resultados</button></a></td>
            <td align="center"><button  data-id="<%= h[i]._id %>" class="btn btn-success asignar">Añadir</button></td>
           
            
          </tr>
          <% } %>
      </tbody>
    </table>

  </div>
